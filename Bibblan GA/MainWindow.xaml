<Window x:Class="Bibblan_GA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bibblan_GA"
        mc:Ignorable="d"
        Title="Bibblan" WindowStartupLocation="CenterScreen" WindowState="Maximized" Height="613.347">
    <Border Padding="20 10 20 10">
        <StackPanel>
            <TextBlock FontSize="30" HorizontalAlignment="center" Margin="0 0 0 40">BIBBLAN.SE</TextBlock>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,0,300">
                    <TextBlock Text="Search" />
                    <TextBox x:Name="searchField" Width="250" HorizontalAlignment="Left" />
                    <Button Content="Find" Margin="0 10" Width="80" HorizontalAlignment="Left" Click="Button_Click" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Width="50" HorizontalAlignment="Left">
                            <TextBlock Text="Title" />
                            <CheckBox  />
                            <TextBlock Text="Author" />
                            <CheckBox  />
                        </StackPanel>
                        <StackPanel Grid.Column="1" Width="50" HorizontalAlignment="Left">
                            <TextBlock Text="Genre" />
                            <CheckBox  />
                            <TextBlock Text="ISBN" />
                            <CheckBox  />
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Available" />
                            <CheckBox  />

                        </StackPanel>

                    </Grid>
                </StackPanel>

                <StackPanel Grid.Column="1" Grid.Row="0">
                    <ListView x:Name="listView" Height="400" Grid.RowSpan="2">
                        <ListView.View>
                            <GridView >
                                <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Title}" />
                                <GridViewColumn Header="Author" DisplayMemberBinding="{Binding Author}" />
                                <GridViewColumn Header="Genre" DisplayMemberBinding="{Binding Genre}" />
                                <GridViewColumn Header="ISBN" DisplayMemberBinding="{Binding Isbn}" />
                                <GridViewColumn Header="Pages" DisplayMemberBinding="{Binding Pages}" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>

            </Grid>
            <Grid>
                <StackPanel>

                </StackPanel>
            </Grid>
        </StackPanel>
    </Border>
</Window>
