<Window x:Class="Bibblan_GA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bibblan_GA"
        mc:Ignorable="d"
        Title="MainWindow" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Border Padding="20 10 20 10">
        <StackPanel>
            <TextBlock FontSize="30" HorizontalAlignment="center" Margin="0 0 0 40">BIBBLAN.SE</TextBlock>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Border Padding="10">
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Search" />
                        <TextBox Width="250" HorizontalAlignment="Left" />
                        <Button Content="Find" Margin="0 10" Width="80" HorizontalAlignment="Left" Click="Button_Click" />

                    </StackPanel>
                </Border>
                <StackPanel Grid.Column="1">
                    <ListView x:Name="listView" Height="400">
                        <ListView.View>
                            <GridView >
                                <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Title}"/>
                                <GridViewColumn Header="Author" DisplayMemberBinding="{Binding Author}" />
                                <GridViewColumn Header="Genre" DisplayMemberBinding="{Binding Genre}" />
                                <GridViewColumn Header="ISBN" DisplayMemberBinding="{Binding Isbn}" />
                                <GridViewColumn Header="Pages" DisplayMemberBinding="{Binding Pages}" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>

            </Grid>
            <Grid>
                <StackPanel>


                </StackPanel>
            </Grid>
        </StackPanel>
    </Border>
</Window>
